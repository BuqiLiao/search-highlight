{
  "name": "search-highlight-js",
  "version": "1.0.0",
  "description": "A lightweight library for highlighting and removing text highlights within DOM elements.",
  "type": "module",
  "scripts": {
    "build": "vite build && tsc",
    "build:watch": "concurrently \"vite build --watch\" \"tsc --watch\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "main": "dist/search-highlight.umd.js",
  "module": "dist/search-highlight.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/search-highlight.es.js",
    "./umd": "./dist/search-highlight.umd.js"
  },
  "keywords": [
    "highlight",
    "text",
    "DOM",
    "utility",
    "JavaScript",
    "TypeScript"
  ],
  "author": "Buqi Liao",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "type-fest": "^4.31.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.7"
  },
  "dependencies": {
    "jest-environment-jsdom": "^29.7.0"
  }
}
